<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mysys.view.LoginSceneController">
   <children>
      <TextField fx:id="userEdit" layoutX="276.0" layoutY="303.0" prefHeight="36.0" prefWidth="251.0"
                 promptText="输入用户名"/>
      <Label layoutX="205.0" layoutY="313.0" text="用户名"/>
      <Label layoutX="211.0" layoutY="373.0" text="密码"/>
      <PasswordField fx:id="passwordEdit" layoutX="276.0" layoutY="363.0" prefHeight="36.0" prefWidth="251.0"
                     promptText="输入密码"/>
      <Button layoutX="299.0" layoutY="432.0" mnemonicParsing="false" onAction="#clickLogin" prefHeight="36.0"
              prefWidth="73.0" text="登录"/>
      <Button layoutX="427.0" layoutY="432.0" mnemonicParsing="false" onAction="#clickRegister" prefHeight="36.0"
              prefWidth="73.0" text="注册"/>
      <Label fx:id="loginMessage" layoutX="355.0" layoutY="267.0" prefHeight="24.0" prefWidth="144.0"
             textFill="#e40e0e"/>
      <Label layoutX="350.0" layoutY="74.0" text="用户登录">
         <font>
            <Font size="25.0"/>
         </font>
      </Label>
      <Button layoutX="32.0" layoutY="28.0" mnemonicParsing="false" onMouseClicked="#clickBackButton"
              prefHeight="45.0" prefWidth="74.0" text="返回">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
   </children>
</AnchorPane>
